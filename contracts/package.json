{
  "name": "chocochoco-contracts",
  "version": "0.1.0",
  "description": "ChocoChoco Solana smart contracts (Anchor)",
  "scripts": {
    "build": "anchor build",
    "build:sbf": "anchor build -- --no-default-features",
    "idl:build": "cargo build -p chocochoco-game --features idl-build",
    "test": "pnpm run build:sbf && pnpm run idl:build && anchor test --skip-build",
    "test:unit": "cargo test -p chocochoco-game --features idl-build -- --nocapture",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:testnet": "anchor deploy --provider.cluster testnet",
    "idl:init": "anchor idl init",
    "idl:upgrade": "anchor idl upgrade",
    "lint": "cargo clippy -- -D warnings",
    "format": "cargo fmt"
  },
  "dependencies": {},
  "devDependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.95.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
