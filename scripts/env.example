# Copy to .env and fill values, then `source .env` (Bash)

# Deployer private key (0x-prefixed, no quotes)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# RPC endpoints
BASE_SEPOLIA_RPC=https://sepolia.base.org
POLYGON_AMOY_RPC=https://rpc-amoy.polygon.technology

# Etherscan-like API keys (for verification)
BASESCAN_API_KEY=your_basescan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Constructor params for ChocoChocoGame
# Treasury receives fees (must be a valid address)
TREASURY_ADDRESS=0xYourTreasuryAddress

# Fixed stake per entry (in wei)
STAKE_WEI=10000000000000000   # 0.01 ether

# Phase durations (seconds)
COMMIT_SEC=3600
REVEAL_SEC=3600

# Fee in basis points (e.g., 300 = 3%)
FEE_BPS=300

